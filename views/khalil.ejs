<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Treatments</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">My Treatments</h2>



        <% if (data.length > 0) { %>
            <table class="table table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Doctor</th>
                        <th>Description</th>
                        <th>Medication</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(treatment => { %>
                        <tr>
                            <td><%= treatment.first_name || 'N/A' %></td>
                            <td><%= treatment.cin || 'N/A' %></td>
                            <td><%= treatment.descript || 'N/A' %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="alert alert-info">There are no treatments added by you.</div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>